<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    tools:context=".SoundFragment">


    <Button
        android:id="@+id/button_save_sounds"
        android:layout_width="0dp"
        android:layout_height="68sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/orange"
        android:text="GUARDAR"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12sp"
        app:iconTint="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_sounds"
        app:rippleColor="@color/orange"
        app:strokeColor="@color/orange"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"
        android:fontFamily="@font/quicksand_light"
        android:text="Alertas sonoras"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="94sp"
        android:layout_height="94sp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_horus_eye_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_imput"
        android:fontFamily="@font/quicksand_light"
        android:paddingStart="12sp"
        android:paddingLeft="8sp"
        android:paddingTop="8sp"
        android:paddingEnd="12sp"
        android:paddingBottom="12sp"
        android:text="@string/Sonidos"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Switch
        android:id="@+id/switch_sounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:checked="true"
        android:fontFamily="@font/quicksand_light"
        android:showText="false"
        android:splitTrack="true"
        android:text="Alertas de sonido"
        android:textColor="@color/black"
        android:textOff="Desactivado"
        android:textOn="Activado"
        android:textSize="28sp"
        android:textStyle="bold"
        android:thumbTint="@color/greenhorus_dark"
        android:trackTint="@color/green_focused"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        tools:checked="true" />
</androidx.constraintlayout.widget.ConstraintLayout>